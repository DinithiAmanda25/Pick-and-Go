{
    "name": "pick-and-go",
    "version": "1.0.0",
    "description": "Pick and Go - Full Stack Application",
    "main": "backend/server.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "start": "node backend/server.js",
        "server": "cd backend && npm run dev",
        "client": "cd frontend && npm run dev",
        "build": "cd frontend && npm run build",
        "install-server": "cd backend && npm install",
        "install-client": "cd frontend && npm install",
        "install-all": "npm run install-server && npm run install-client",
        "heroku-postbuild": "npm run install-all && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DinithiAmanda25/Pick-and-Go.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/DinithiAmanda25/Pick-and-Go/issues"
    },
    "homepage": "https://github.com/DinithiAmanda25/Pick-and-Go#readme",
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": "18.x",
        "npm": "9.x"
    }
}